<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dialogbox_bg"
    android:gravity="center" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="300dp"
        android:layout_margin="20dp"
        android:background="@drawable/dialogbox_popup"
        android:gravity="center"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/txtGameOverHeading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="25dp"
            android:text="@string/lbl_game_over"
            android:textColor="@android:color/white"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/game_buy_credtis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="25dp"
            android:textColor="@android:color/white"
            android:visibility="gone" />

        <TextView
            android:id="@+id/game_over_restart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:background="@drawable/selector_restart" />

        <TextView
            android:id="@+id/game_over_exit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:background="@drawable/selector_exit" />

        <TextView
            android:id="@+id/share_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:textColor="@drawable/selecotor_text"
            android:gravity="center"
            android:padding="10dp"
            android:text="@string/title_share_score"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <com.app.defuse.views.MyTextView
                android:visibility="gone"
                android:gravity="center_horizontal"
                android:textColor="@android:color/white"
                android:text="HIGH SCORE"
                android:id="@+id/high_score"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


            <com.app.defuse.views.MyTextView
                android:visibility="gone"
                android:gravity="center_horizontal"
                android:textColor="@android:color/white"
                android:text="CURRENT SCORE"
                android:id="@+id/curr_score"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <com.app.defuse.views.MyTextView
            android:visibility="gone"
            android:id="@+id/update_score"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:textAlignment="center"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:background="@drawable/press_level"
            android:textColor="@android:color/white"
            android:text="UPDATE HIGH SCORE"
            android:layout_width="wrap_content"
            android:layout_height="40dp" />


        <com.app.defuse.views.MyTextView
            android:visibility="gone"
            android:id="@+id/view"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:textAlignment="center"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:background="@drawable/press_level"
            android:textColor="@android:color/white"
            android:text="VIEW LEADERBOARD"
            android:layout_width="wrap_content"
            android:layout_height="40dp" />

    </LinearLayout>

</LinearLayout>