<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textColor="@android:color/white"
            android:textSize="17dp"
            android:textStyle="bold"
            android:text="Getting Prize Money..."
            android:id="@+id/prizeMoney"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:layout_alignParentRight="true"
            android:id="@+id/igv_play"
            android:layout_width="@dimen/logo_height"
            android:layout_height="@dimen/logo_height"
            android:layout_gravity="right|top"
            android:contentDescription="@null"
            android:src="@drawable/logo_main" />
    </RelativeLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="40dp"
        android:layout_marginTop="40dp"
        android:contentDescription="@null"
        android:padding="5dp"
        android:src="@drawable/logo" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/lbl_classic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/selector_classic" />

            <TextView
                android:id="@+id/lbl_classic_reverse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/selector_classic_reverse" />

            <TextView
                android:id="@+id/lbl_classic_arcade"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/selector_arcade" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/lblTwist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/selector_twist" />

            <TextView
                android:id="@+id/lblTwistReverse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/selector_twist_reverse" />

            <TextView
                android:id="@+id/lblTwistArcade"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/selector_arcade_twist" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/lbl_settings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/selector_settings" />

            <TextView
                android:id="@+id/lbl_credits"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/selecotor_credits" />

            <TextView
                android:id="@+id/lbl_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/selecotor_share_fragment" />
        </LinearLayout>

    </LinearLayout>

    <FrameLayout
        android:layout_marginBottom="30dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >

        <com.app.defuse.views.MyTextView
            android:textColor="@android:color/white"
            android:layout_marginTop="15dp"
            android:layout_gravity="bottom|center_horizontal"
            android:gravity="start"
            android:layout_marginBottom="60dp"
            android:textAlignment="center"
            android:text="Check MiniXerox Facebook page to get update about competition."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/lbl_rate_us"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start|bottom"
            android:gravity="start"
            android:padding="10dp"
            android:text="@string/title_rate_us"
            android:textColor="@drawable/selecotor_text"
            android:textSize="16sp" />


        <com.app.defuse.views.MyTextView
            android:id="@+id/lbl_leaderboard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:gravity="start"
            android:padding="10dp"
            android:text="Leaderboard"
            android:textColor="@drawable/selecotor_text"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/lbl_help_tutorials"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|bottom"
            android:gravity="end"
            android:padding="10dp"
            android:text="@string/title_help"
            android:textColor="@drawable/selecotor_text"
            android:textSize="16sp" />
    </FrameLayout>

</LinearLayout>